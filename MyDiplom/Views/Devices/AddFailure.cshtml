            </div>
            <div class="form-group">
                <label asp-for="DeviceId" hidden="hidden" class="control-label"></label>
                <input asp-for="DeviceId" type="text" class="form-control" hidden="hidden" readonly value="@ViewData["DeviceId"]"/>
                <span asp-validation-for="DeviceId"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="AddFailure" class="btn btn-primary" />
